@model IslamicGuide.Data.ViewModels.Position.PositionDetialsVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}
@{
    var langCode = Request.Cookies["culture"] == null ? "ar" : Request.Cookies["culture"].Value;
    string arrow = "";
    if (langCode == "en")
    { arrow = "sab_banner_text"; }
    else
    { arrow = "sab_banner_textAr"; }
}
@Html.Hidden("selectedBookId", new { @value = ViewBag.SelectedBookId, @id = "selectedBookId" })
<div class="kode_sab_banner_wrap them_overlay">
    <!--CONTAINER START-->
    <div class="container">


        <div class=@arrow>
            <h2>@Model.SuraTitle</h2>
            <ul class="breadcrumbs">

                @foreach (var r in ((List<IslamicGuide.Data.ViewModels.Shared.Route>)ViewBag.Routes))
                {
                    if (r.Id == null)
                    {
                        <li><strong>@Html.ActionLink((langCode == "en") ? r.Text.EnglishName : r.Text.ArabicName, r.ActionName, r.Controller, null, null)</strong></li>
                    }

                    else
                    {
                        <li><strong>@Html.ActionLink((langCode == "en") ? r.Text.EnglishName != null ? r.Text.EnglishName : "." : r.Text.ArabicName, r.ActionName, r.Controller, new { subjectId = r.Id }, null)</strong></li>
                    }
                    count++;
                }
            </ul>
        </div>
    </div>
    <!--CONTAINER END-->
</div>
<div id="cnt">


    <!--KODE NAVIGATION WRAP START-->
    <div class="kode_navigation_wrap">
        <!--CONTAINER START-->
        <div style="margin-bottom:2%;margin-top:2%;" class="container">
            <div class="navigation">
                <ul id="linksUL" style="margin-left:auto;margin-right:auto; max-width: fit-content;border: 3px solid #d2983d; float: none !important;">
                    @foreach (var tab in ViewBag.tabs)
                    {
                        <li id=@tab.Id style="margin-left:unset"><a href="@Url.Action("GetPositionDetails","Positions",new {id = @ViewBag.PositionId, tab = tab.Id})">@((langCode == "en" && tab.EnglishCategory != null) ? tab.EnglishCategory : tab.Category)</a></li>

                    }
                </ul>

            </div>
        </div>
        @*<div>
                <div class="card-header" style="text-align:center; background-color:#d2983d">
                    <h5 style="color:white" class="hStyles">@Model.HedaytAlAyat</h5>
                </div>
            </div>*@
        <!--CONTAINER END-->
    </div>
    <!--KODE NAVIGATION WRAP END-->
    <input id="positionId" value="@ViewBag.PositionId" hidden="" />
    <div class="container">

        <div class="card">
            <div class="card-body">

            </div>
        </div>
        <div class="row-fluid">
            <div class="well">


                <div style="display:inline" class="card text-center">
                    <div style="margin-bottom:10px; border : 1px solid black">

                        <div class="card-header" style="text-align:center; background-color:#d2983d">
                            <h2 style="color:white" class="hStyles">@Model.SuraTitle</h2>
                        </div>
                        <div style="font-family: Amiri-Quran; color: #535353;font-size: 1.8em;line-height: 1.7em; font-weight: bold;" class="card-body">
                            <p style="padding:10px">
                                @ViewBag.PrevAya
                                <span style=" color: #d2973b;" class="card-text">@Model.PositionQuranWords</span>
                                @ViewBag.NextAya
                            </p>
                        </div>
                    </div>

                </div>
                @if (ViewBag.BooksDDL != null)
                {
                    <div style="padding-bottom: 20px; padding-top: 20px" class="row">
                        <div class="col-md-4">
                            @Html.DropDownList(Resources.LayoutResource.Books, new SelectList(ViewBag.BooksDDL, "BookId", "Title"), new { @onchange = "OnChangeBook()", @id = "Books", @style = "border:1px solid #e1ba7f !important; font-size:18pt; font-weight:300" })
                        </div>
                    </div>
                }
                @if (Model.BookContent != null)
                {

                    if (Model.BookContent.Count > 0)
                    {
                        <div class="card text-center">
                            <div class="card-header" style="text-align:center;background-color:#d2983d">
                                <h3 style="color:white" class="hStyles">
                                    @Model.BookContent[0].Title
                                </h3>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.BookContent[0].ContentHTML))
                            {
                                <div style="font-family: Amiri-Quran; color: #535353; font-size: 1.8em; line-height: 1.7em; font-weight: bold;" class="card-body">
                                    <div style="padding-right: 7px; padding-left: 7px;">
                                        @Html.Raw(Model.BookContent[0].ContentHTML)
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div style="text-align: center; font-family: Amiri-Quran; color: #535353; font-size: 1.8em; line-height: 1.7em; font-weight: bold;" class="card-body">
                                    <div style="padding-right: 7px; padding-left: 7px;">
                                        @Resources.LayoutResource.ErrorEmptyContent
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>



@section scripts{

    <script>
        document.getElementById("Books").value = @ViewBag.SelectedBookId;
        function OnChangeBook() {
            var params = (new URL(document.location)).searchParams;
            var selectedTab = params.get("tab");
            console.log(selectedTab);
            var bookDDL = document.getElementById("Books");
            var selectedBookId = bookDDL.options[bookDDL.selectedIndex].value;
            document.location = "/Positions/GetSpecificContent?positionId=" +
                @ViewBag.PositionId +
                "&bookId=" +
                selectedBookId +
                "&tab=" +
                selectedTab;
        }
        if (@ViewBag.Tab != null) {
            document.getElementById("@ViewBag.Tab").firstChild.className += 'active';
        }
    </script>
}


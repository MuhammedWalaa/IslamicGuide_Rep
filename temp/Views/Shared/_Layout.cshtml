<script>
    function OnChangeBook()
    {
        if (getElementById("url").valid) {

            var selectedValue = $("#url").val();
            console.log(selectedValue);
            var base_url = window.location.origin;
            document.location = base_url + "/Home/AddSubscriber/" + selectedValue;
        }
    }

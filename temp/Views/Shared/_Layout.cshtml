    <div class="wraper">
        <header>
            <!--KODE TOP WRAP START-->
            <div class="kode_top_wrap">
                <!--CONTAINER START-->
                <div class="container">
                    <!--ROW START-->
                    <div class="row">
                        <div class="col-md-6">
                            <!--KODE TOP INFO START-->
                            <div class="kode_top_info">
                                <ul>
                                    <li><a href="#"><i class="fa fa-envelope"></i>&nbsp;&nbsp;@ViewBag.StaticData.Email</a></li>
                                    <li><a href="#"><i class="fa icon-technology"></i>&nbsp;&nbsp;@ViewBag.StaticData.Phone</a></li>
                                    <li>
                                        <div class="dropdown">
                                            <button style="direction : ltr !important" id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                @if (langCode == "en")
                                                {
                                                    <img style="width:20px !important" src="~/Content/images/en.svg" alt=""><p style="display:inline-block">EN</p>
                                                }
                                                else
                                                {
                                                    <img style="width:20px !important" src="~/Content/images/ar.svg" alt=""><p style="display:inline-block">AR</p>
                                                }
                                                <span class="fa fa-angle-down"></span>
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dLabel">
                                                <li><a href="@Url.Action("SetLanguage", "Home", new { lang = "ar" })"><img style="width:20px !important ;" src="~/Content/images/ar.svg" alt="">AR</a></li>
                                                <li><a href="@Url.Action("SetLanguage", "Home", new { lang = "en" })"><img style="width:20px !important ;" src="~/Content/images/en.svg" alt="">EN</a></li>

                                            </ul>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <!--KODE TOP INFO END-->
                        </div>
                        <div class="col-md-6">
                            <div class="kode_top_right_text">
                                @using (Html.BeginForm("SearchLayout", "Topic"))
                                {
                                    <div class="kf_commet_field">
                                        <input placeholder="@Resources.LayoutResource.Search" name="searchQuery" id="searchQuery" type="text" value="" required>
                                        <button type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                }
                            </div>
                        </div>
                        <!--ROW END-->
                    </div>
                <!--CONTAINER END-->
            </div>
            <!--KODE TOP WRAP END-->
            <!--KODE TOP LOGO WRAP START-->
            <div class="kode_top_logo_wrap them_overlay">
                <!--CONTAINER START-->
                <div class="container">
                    <div class="top_logo">
                        <h1><a href="#"><img src="~/Content/images/top-logo.png" alt="kodeforest"></a></h1>
                    </div>
                    <div class="top_time_circle">
                        <ul>
                            @foreach (var p in ((List<PraysVM>)@ViewBag.PraysTime))
                            {
                                <li><a href="#">@p.Name</a><span>@p.Time</span></li>

                            }
                        </ul>
                    </div>
                </div>
                <!--CONTAINER END-->
            </div>
            <!--KODE TOP LOGO WRAP END-->
            <!--KODE NAVIGATION WRAP START-->
            <div class="kode_navigation_wrap">
                <!--CONTAINER START-->
                <div class="container">
                    <div class="navigation">
                        <ul>
                            <li>@Html.ActionLink(Resources.LayoutResource.Home, "Index", "Home")</li>
                            <li>
                                <a href="#">@Resources.LayoutResource.Services</a>
                                <ul class="kode">
                                    <li>@Html.ActionLink(Resources.LayoutResource.Subjects, "Index", "Topic", new { subjectId = 1 }, null)</li>
                                    <li>@Html.ActionLink(Resources.LayoutResource.Books, "Index", "book")</li>
                                    <li>@Html.ActionLink(Resources.LayoutResource.Quran, "Index", "quran")</li>
                                </ul>
                            </li>
                            <li> @Html.ActionLink(@Resources.LayoutResource.AboutUs, "About", "Home")</li>
                            <li><a href="/home/contact">@Resources.LayoutResource.ContactUs</a></li>
                        </ul>
                        <!--DL Menu Start-->
                        <div id="kode-responsive-navigation" class="dl-menuwrapper">
                            <button class="dl-trigger">Open Menu</button>
                            <ul class="dl-menu">
                                <li>@Html.ActionLink(Resources.LayoutResource.Home, "Index", "Home")</li>
                                <li>
                                    <a href="#">@Resources.LayoutResource.Services</a>
                                    <ul class="dl-submenu">
                                        <li>@Html.ActionLink(Resources.LayoutResource.Subjects, "Index", "Topic", new { subjectId = 1 }, null)</li>
                                        <li>@Html.ActionLink(Resources.LayoutResource.Books, "Index", "book")</li>
                                        <li>@Html.ActionLink(Resources.LayoutResource.Quran, "Index", "quran")</li>
                                    </ul>
                                </li>
                                <li><a href="~/Views/Home/About.cshtml">@Resources.LayoutResource.AboutUs</a></li>
                                <li><a href="/home/contact">@Resources.LayoutResource.ContactUs</a></li>
                            </ul>
                        </div>
                        <!--DL Menu END-->
                    </div>
                </div>
                <!--CONTAINER END-->
            </div>
            <!--KODE NAVIGATION WRAP END-->
        </header>
        
            @RenderBody()
      
        <div class="kode_newsletter_wrap">
            <!--CONTAINER START-->
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="kode_newsletter_des">
                            <span><i class="fa fa-envelope"></i></span>
                            <div class="kode_newsletter_text">
                                <h5><a href="#">@Resources.LayoutResource.Newsletter</a></h5>
                                <p>@Resources.LayoutResource.Newsletterupdate</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="kode_newsletter_form">
                           @using (Html.BeginForm("AddSubscriber", "Home"))
                           {
                               <div class="kf_commet_field">
                                   <input style="direction:ltr !important" placeholder="@Resources.LayoutResource.Entermail" name="email" id="email" type="email" value="" data-default="Website" size="30" required>
                                   <button type="submit" class="medium_btn background-bg-dark">@Resources.LayoutResource.Submit</button>
                                   @if (@TempData["added"] != null)
                                   {
                                   <script> alert("@Resources.LayoutResource.Added") </script>
                                   }
                                   @if (@TempData["Wrong"] != null)
                                   {
                                   <script> alert("@Resources.LayoutResource.Wrong") </script>
                                   }
                               </div>
                           }
                        </div>
                    </div>
                </div>
            </div>
            <!--CONTAINER END-->
        </div>
        <!--KODE NEWSLETTER WRAP END-->
        <footer>
            <!--WIDGET WRAP START-->
            <div class="widget_wrap them_overlay">
                <!--CONTAINER START-->
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="widget_logo">
                                <a href="#"><img src="images/footer-logo.png" alt=""></a>
                                <p>There are many variations of passages of Lorem Ipsum availableThere are many variations of passages of Lorem Ipsum available...</p>
                                <ul class="widget_call_info">
                                    <li><a href="#"><i class="fa fa-map-marker"></i>&nbsp;&nbsp;&nbsp;@ViewBag.StaticData.Location</a></li>
                                    <li><a href="#"><i class="fa fa-phone"></i>&nbsp;&nbsp;@ViewBag.StaticData.Phone</a></li>
                                    <li><a href="#"><i class="fa fa-envelope"></i>&nbsp;&nbsp;@ViewBag.StaticData.Email</a></li>
                                </ul>
                                <ul class="widget_social_icon">
                                    <li><a class="hvr-ripple-out" href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a class="hvr-ripple-out" href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a class="hvr-ripple-out" href="#"><i class="fa fa-vimeo"></i></a></li>
                                    <li><a class="hvr-ripple-out" href="#"><i class="fa fa-camera-retro"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="widget_event">
                                <h4 class="widget_title">@Resources.LayoutResource.Getintouch</h4>
                                <form method="post" class="comment-form">
                                    <div class="kode-left-comment-sec">
                                        <div class="kf_commet_field">
                                            <input placeholder="@Resources.LayoutResource.Yname" id="author" name="author" type="text" value="" data-default="Name*" size="30" required>
                                        </div>
                                        <div class="kf_commet_field">
                                            <input placeholder="@Resources.LayoutResource.Yemail" id="email" name="email" type="text" value="" data-default="Email*" size="30" required>
                                        </div>
                                    </div>
                                    <div class="kode_textarea">
                                        <textarea placeholder="@Resources.LayoutResource.Ymessage" id="comment" name="comment"></textarea>
                                    </div>
                                    <button name="submit" type="submit" class="medium_btn bg_transparent border btn_hover">@Resources.LayoutResource.Submitnow</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!--CONTAINER END-->
            </div>
            <!--WIDGET WRAP END-->
            <!--WIDGET COPYRIGHT START-->
            <div class="widget_copyright">
                <!--CONTAINER START-->
                <div class="container">
                    <div class="copyright_text">
                        <p>@Resources.LayoutResource.Copyrights</p>
                        <a id="child-topbtn" class="top_btn hvr-wobble-vertical" href="#"><i class="fa fa-long-arrow-up" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!--CONTAINER END-->
            </div>
            <!--WIDGET COPYRIGHT END-->
        </footer>
    </div>
